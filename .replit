modules = ["nodejs-20", "web"]
expertMode = true

[env]
RUN_ELECTRON = "0"          # <— master switch (0 = off)

run = "npm run replit"      # <— must NOT start electron

[deployment]
deploymentTarget = "vm"

[agent]
expertMode = true

[workflows]
runButton = "Tagglo Lightweight"

[[workflows.workflow]]
name = "Tagglo Lightweight"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run replit"

[workflows.workflow.metadata]
outputType = "console"
