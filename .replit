modules = ["nodejs-20", "web", "postgresql-16"]
expertMode = true

[env]
RUN_ELECTRON = "0"          # <— master switch (0 = off)

run = "npm run replit"      # <— must NOT start electron

[deployment]
deploymentTarget = "vm"

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Tagglo Info"

[[workflows.workflow]]
name = "Tagglo Info"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run replit"

[workflows.workflow.metadata]
outputType = "console"

[nix]
