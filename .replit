modules = ["nodejs-20", "web", "postgresql-16"]
expertMode = true

[env]
RUN_ELECTRON = "0"          # <— master switch (0 = off)

run = "npm run replit"      # <— must NOT start electron

[deployment]
deploymentTarget = "vm"

[agent]
expertMode = true

[workflows]

[nix]
channel = "stable-25_05"
packages = ["xvfb-run", "glib", "gtk3", "at-spi2-atk", "nss", "nspr", "xorg.xvfb", "libdrm", "mesa", "libgbm", "xorg.libX11", "xorg.libXrandr", "libxkbcommon", "alsa-lib", "gsettings-desktop-schemas", "dconf"]

[[ports]]
localPort = 5001
externalPort = 3000

[[ports]]
localPort = 8000
externalPort = 8000
