modules = ["nodejs-20", "web", "postgresql-16"]
expertMode = true

[env]
RUN_ELECTRON = "0"          # <— master switch (0 = off)

run = "npm run replit"      # <— must NOT start electron

[deployment]
deploymentTarget = "vm"

[agent]
expertMode = true

[workflows]
runButton = "Tagglo Electron"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Tagglo Electron"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Debug API Server"

[[workflows.workflow]]
name = "Tagglo Electron"
author = "agent"

[workflows.workflow.metadata]
outputType = "vnc"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./start-electron.sh"

[[workflows.workflow]]
name = "Debug API Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node debug-api-server.js"
waitForPort = 8000

[nix]
channel = "stable-25_05"
packages = ["xvfb-run", "glib", "gtk3", "at-spi2-atk", "nss", "nspr", "xorg.xvfb", "libdrm", "mesa", "libgbm", "xorg.libX11", "xorg.libXrandr", "libxkbcommon", "alsa-lib"]

[[ports]]
localPort = 5001
externalPort = 3000

[[ports]]
localPort = 8000
externalPort = 8000
