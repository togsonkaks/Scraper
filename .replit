packages = ["xvfb-run", "glib", "gtk3", "at-spi2-atk", "nss", "nspr", "xorg.xvfb", "libdrm", "mesa", "libgbm", "xorg.libX11", "xorg.libXrandr", "libxkbcommon", "alsa-lib", "gsettings-desktop-schemas", "dconf"]

